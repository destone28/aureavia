# AureaVia Environment Variables
# Copy to .env and fill in your values

# Database
DATABASE_URL=postgresql+asyncpg://aureavia:aureavia@localhost:5433/aureavia

# Security
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# Email (SMTP for 2FA codes)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@aureavia.com

# Redis
REDIS_URL=redis://localhost:6379/0

# Development mode (set to false in production)
DEV_MODE=true

# ETG Transfers API credentials (we are the supplier)
ETG_API_KEY=etg-test-key-change-in-production
ETG_API_SECRET=etg-test-secret-change-in-production

# CORS origins (JSON array)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
